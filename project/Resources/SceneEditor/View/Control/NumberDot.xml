<!-- params: X, Y, Number -->
<Node X="{ x }" Y="{ y }" Width="25" Height="25">
	<Import Module="View.Shape.LineCircle"/>
	<Import Module="View.Shape.SolidCircle"/>	
	
	<SolidCircle Radius="12.5" Color="0x2200ffff"/>
	<LineCircle Radius="12.5" Color="0xff00ffff"/>
	<LabelTTF Name="label" X="{ $X }" Y="{ $Y }" Text="{ tostring(number) }" FontName="Arial" FontSize="16" Color="0x00ffff"/>
	<Script>label.texture.antiAlias = false</Script>
</Node>
