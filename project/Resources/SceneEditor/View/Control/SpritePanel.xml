<Node X="{ x }" Y="{ y }" Width="{ width }" Height="{ height }">
	<Import Module="Control.ScrollArea"/>
	<Import Module="View.Shape.LineRect"/>
	<Import Module="View.Shape.SolidRect"/>

	<SolidRect Width="{ width }" Height="{ height }" Color="0x2200ffff"/>
	<LabelTTF Name="title" X="{ $X }" Y="{ $T-20 }" Text="Select Sprite" FontName="Arial" FontSize="24" Color="0x00ffff" Opacity="0.5"/>
	<Script>title.texture.antiAlias = false</Script>
	<ScrollArea Name="scrollArea" X="{ $X }" Y="{ $T-40-(height-100)/2 }" Width="{ width }" Height="{ height-100 }" ViewWidth="{ width }" ViewHeight="{ height-100 }" PaddingX="0" PaddingY="100" TouchPriority="0" Ref="True">
		<Item Name="view">
			<Menu Name="menu" AnchorX="0" AnchorY="0" Width="{ width }" Height="{ height-100 }" TouchPriority="1" Ref="True">
			</Menu>
		</Item>
	</ScrollArea>
	<LineRect X="-1" Y="-1" Width="{ width+2 }" Height="{ height+2 }" Color="0x6600ffff"/>
</Node>
