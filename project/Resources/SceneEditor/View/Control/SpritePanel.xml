<!-- params: X, Y, Width, Height -->
<Node X="{ x }" Y="{ y }" Width="{ width }" Height="{ height }">
	<Import Module="Control.ScrollArea"/>
	<Import Module="View.Shape.LineRect"/>
	<Import Module="View.Shape.SolidRect"/>
	<Import Module="Control.Button"/>

	<SolidRect Width="{ width }" Height="{ height }" Color="0xe5100000"/>
	<LabelTTF Name="title" X="{ $X }" Y="{ $T-20 }" Text="Select Sprite" FontName="Arial" FontSize="24" Color="0x00ffff" Opacity="0.5" AntiAlias="False"/>
	<ScrollArea Name="scrollArea" X="{ $X }" Y="{ $T-40-(height-100)/2 }" Width="{ width }" Height="{ height-100 }" ViewWidth="{ width }" ViewHeight="{ height-100 }" PaddingX="0" PaddingY="100" TouchPriority="0" Ref="True">
		<Item Name="view">
			<Menu Name="menu" AnchorX="0" AnchorY="0" Width="{ width }" Height="{ height-100 }" TouchPriority="1" Ref="True"/>
		</Item>
	</ScrollArea>
	<LineRect X="-1" Y="-1" Width="{ width+2 }" Height="{ height+2 }" Color="0x88ffafaf"/>
	<Menu Name="opMenu" X="{ $X }" Y="{ $B+30 }" Width="{ width }" Height="60" Ref="True">
		<Button Name="modeBtn" X="30" Y="30" Width="40" Height="40" FontSize="12" Text="Mode" Ref="True"/>
		<Button Name="addBtn" X="80" Y="30" Width="40" Height="40" FontSize="20" Text="+" Ref="True"/>
		<Button Name="delBtn" X="130" Y="30" Width="40" Height="40" FontSize="20" Text="-" Ref="True"/>
		<Button Name="groupBtn" X="180" Y="30" Width="40" Height="40" FontSize="12" Text="Group" Ref="True"/>
		<Button Name="delGroupBtn" X="230" Y="30" Width="40" Height="40" FontSize="12" Text="Del\nGroup" Ref="True"/>
		<LabelTTF Name="hint" X="{ $X }" Y="30" Text="Updating" FontName="Arial" FontSize="16" Color="0x00ffff" Opacity="0" AntiAlias="False" Ref="True">
			<Action>
				<Loop Name="loopFade" Ref="True">
					<Sequence>
						<Opacity Time="0.3" Alpha="0" Ease="OutQuad"/>
						<Opacity Time="0.3" Alpha="1" Ease="InQuad"/>
					</Sequence>
				</Loop>
			</Action>
		</LabelTTF>
	</Menu>
</Node>
