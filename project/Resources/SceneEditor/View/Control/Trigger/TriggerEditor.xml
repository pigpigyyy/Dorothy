<!-- params: X, Y, Width, Height -->
<Layer X="{ @X }" Y="{ @Y }"
	TouchPriority="{ editor.levelTriggerEditor }"
	SwallowTouches="True" TouchEnabled="True" Visible="False">
	<Import Module="Control.Basic.ScrollArea"/>
	<Import Module="Control.Basic.Button"/>
	<Import Module="Control.Trigger.GroupButton"/>
	<Import Module="Control.Trigger.TriggerItem"/>
	<!--<Import Module="View.Shape.LineRect"/>-->
	<Import Module="View.Shape.SolidRect"/>
	<Import Module="View.Control.Basic.CircleButton"/>

	<Node Name="panel" X="{ $X }" Y="{ $Y }" Width="{ @W }" Height="{ @H }" Ref="True">
		<SolidRect Width="{ $W }" Height="{ $H }" Color="0xff100000"/>

		<!-- scope menu -->
		<Menu Name="scopeMenu" X="105" Y="{ $T-45 }" Width="210" Height="90" AlignItems="10" TouchPriority="{ editor.levelTriggerEditor-1 }" Ref="True">
			<TriggerItem Name="localBtn" Text="Local" Width="{ ($W-30)/2 }" Height="30" FontSize="20" Ref="True"/>
			<TriggerItem Name="globalBtn" Text="Global" Width="{ ($W-30)/2 }" Height="30" FontSize="20" Ref="True"/>
			<GroupButton Name="groupBtn" Text="Skill" Width="190" Height="30" Ref="True"/>
		</Menu>

		<!-- trigger list -->
		<ScrollArea Name="listScrollArea" X="105" Y="{ $T-90-($H-150)/2 }" Width="210" Height="{ $H-150 }" PaddingX="0" PaddingY="100" TouchPriority="{ editor.levelTriggerEditor-2 }" AlignItems="10" Ref="True">
			<Item Name="view">
				<Menu Name="localListMenu" X="{ $X }" Y="{ $Y }" Width="{ $W }" Height="{ $H }" AlignItems="10" TouchPriority="{ editor.levelTriggerEditor-1 }" Enabled="False" Ref="True">
					<TriggerItem Text="SceneInitialized" Width="190" Height="35"/>
				</Menu>
				<Menu Name="globalListMenu" X="{ $X }" Y="{ $Y }" Width="{ $W }" Height="{ $H }" AlignItems="10" TouchPriority="{ editor.levelTriggerEditor-1 }" Enabled="False" Ref="True" Visible="False">
					<TriggerItem Text="CastSpellOnDog" Width="190" Height="35"/>
				</Menu>
			</Item>
		</ScrollArea>

		<!-- trigger edit menu -->
		<Menu Name="editMenu" X="{ $X }" Y="{ $B+30 }" Width="{ $W }" Height="60" AlignItems="10" TouchPriority="{ editor.levelTriggerEditor-1 }" Enabled="False" Ref="True">
			<Button Name="newBtn" Text="New" Width="40" Height="40" FontSize="16" Ref="True"/>
			<Button Name="addBtn" Text="Add" Width="40" Height="40" FontSize="16" Ref="True"/>
			<Button Name="delBtn" Text="Del" Width="40" Height="40" FontSize="16" Ref="True"/>
			<Button Name="copyBtn" Text="Copy" Width="40" Height="40" FontSize="13" Ref="True"/>
		</Menu>

		<!--<LineRect X="-1" Y="-1" Width="{ $W+2 }" Height="{ $H+2 }" Color="0xffffafaf"/>
		<Line Color="0xffafaf" X="{ $X }" Y="{ $Y }" Width="{ $W }" Height="{ $H }">
			<Vec2 X="210" Y="{ $B }"/>
			<Vec2 X="210" Y="{ $T }"/>
		</Line>-->
	</Node>

	<Menu Name="opMenu" X="{ @X+(@W-80)/2-35 }" Y="{ @Y+(@H-80)/2 }" Width="130" Height="60" TouchPriority="{ editor.levelTriggerEditor-3 }" Enabled="False" Ref="True">
		<CircleButton Name="closeBtn" X="{ $R-30 }" Y="{ $Y }" Radius="30" Text="Cancel" FontSize="16" Ref="True">
			<DrawNode>
				<Dot X="30" Y="30" Radius="30" Color="0x22ffffff"/>
			</DrawNode>
		</CircleButton>
	</Menu>
</Layer>
