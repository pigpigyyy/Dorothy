<!-- params: X, Y, Width, Height -->
<LayerColor X="{ @X }" Y="{ @Y }"
	TouchPriority="{ editor.touchLevel8 }"
	Color="0x0" Opacity="0"
	SwallowTouches="True" TouchEnabled="True">
	<Import Module="Control.ScrollArea"/>
	<Import Module="View.Shape.LineRect"/>
	<Import Module="View.Shape.SolidRect"/>
	<Import Module="Control.Button"/>
	<Import Module="View.Control.CircleButton"/>

	<Node Name="panel" X="{ $X }" Y="{ $Y }" Width="{ width }" Height="{ height }" Ref="True">
		<SolidRect Width="{ width }" Height="{ height }" Color="0xee100000"/>
		<LabelTTF Name="title" X="{ $X }" Y="{ $T-20 }" Text="Select Model" FontName="Arial" FontSize="24" Color="0x00ffff" Opacity="0.5" AntiAlias="False"/>
		<ScrollArea Name="scrollArea" X="{ $X }" Y="{ $T-40-(height-110)/2 }" Width="{ width }" Height="{ height-110 }" ViewWidth="{ width }" ViewHeight="{ height-110 }" PaddingX="0" PaddingY="100" TouchPriority="{ editor.touchLevel8-2 }" Ref="True">
			<Item Name="view">
				<Menu Name="menu" AnchorX="0" AnchorY="0" Width="{ width }" Height="{ height-110 }" TouchPriority="{ editor.touchLevel8-1 }" Ref="True"/>
			</Item>
		</ScrollArea>
		<LineRect X="-1" Y="-1" Width="{ width+2 }" Height="{ height+2 }" Color="0x88ffafaf"/>

		<Menu Name="opMenu" AnchorX="0" AnchorY="0" X="0" Y="0" Width="{ width }" Height="70" TouchPriority="{ editor.touchLevel8-3 }" Ref="True">
			<Button Name="modeBtn" X="35" Y="35" Width="50" Height="50" FontSize="16" Text="Mode" Ref="True"/>
			<Button Name="addBtn" X="95" Y="35" Width="50" Height="50" FontSize="16" Text="New" Ref="True"/>
			<Button Name="delBtn" X="155" Y="35" Width="50" Height="50" FontSize="14" Text="Delete" Ref="True"/>
			<Button Name="editBtn" X="215" Y="35" Width="50" Height="50" FontSize="16" Text="Edit" Ref="True"/>
		</Menu>

		<LabelTTF Name="hint" X="{ $W-($W-50)/2 }" Y="30" Text="Updating" FontName="Arial" FontSize="16" Color="0x00ffff" Opacity="0" AntiAlias="False" Ref="True"/>
	</Node>

	<Menu X="{ @X+width/2 }" Y="{ @Y+height/2 }" Width="60" Height="60" TouchPriority="{ editor.touchLevel8-3 }">
		<CircleButton Name="closeBtn" X="{ $X }" Y="{ $Y }" Radius="30" Text="Cancel" FontSize="16" Ref="True">
			<DrawNode>
				<Dot X="30" Y="30" Radius="30" Color="0x22ffffff"/>
			</DrawNode>
		</CircleButton>
	</Menu>

	<Action>
		<Loop Name="loopFade" Ref="True">
			<Sequence>
				<Opacity Time="0.3" Alpha="0" Ease="OutQuad"/>
				<Opacity Time="0.3" Alpha="1" Ease="InQuad"/>
			</Sequence>
		</Loop>
	</Action>
</LayerColor>
