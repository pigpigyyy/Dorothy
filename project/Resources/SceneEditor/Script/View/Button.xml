<!-- params: X, Y, Width, Height, FontSize, Text -->
<MenuItem Name="menuItem" X="x" Y="y" Width="width" Height="height" Color="0x00ffff">
	<Import Module="View.Rectangle"/>

	<Action>
		<Sequence Name="scale">
			<Spawn>
				<Opacity Alpha="1"/>
				<Scale X="0.3" Y="0.3"/>
			</Spawn>
			<Scale Time="0.3" X="1" Y="1" Ease="OutBack"/>
		</Sequence>
		<Opacity Name="fade" Time="0.3" Alpha="0.4" Ease="InExpo"/>
	</Action>

	<Node Name="face" X="width*0.5" Y="height*0.5" Width="width" Height="height" Opacity="0.4">
		<Node PassColor="False">
			<Rectangle X="width*0.5" Y="height*0.5" Width="width" Height="height" FillColor="0x88000000" BorderColor="0xffffffff"/>
		</Node>
		<Line>
			<Vec2 X="0" Y="0"/>
			<Vec2 X="width" Y="0"/>
			<Vec2 X="width" Y="height"/>
			<Vec2 X="0" Y="height"/>
			<Vec2 X="0" Y="0"/>
		</Line>
		<LabelTTF Name="label" X="width*0.5" Y="height*0.5" Text="text" FontName="Arial" FontSize="fontSize"/>
	</Node>
	<Script>
		menuItem:slots("TapBegan",function()
			face:perform(scale)
		end)
		menuItem:slots("TapEnded",function()
			if not fade.done then face:stopAction(fade) end
			face:runAction(fade)
		end)
	</Script>
</MenuItem>